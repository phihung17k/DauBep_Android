<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".chitietmonanhai">

            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="8dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="8dp"
                    android:onClick="clickAbcdefg"

                    android:src="@drawable/back" />






                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pho" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"

                        android:text="Công thức Chế Biên Phở"
                        android:textColor="#094067"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"


                        android:text="Nguyên liệu:"
                        android:textColor="#094067"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginBottom="5dp"
                        android:text="Bò phi lê 1.2 kg\n
Xương ống bò 2 kg \n
Bắp bò 0.7 kg\n
Bánh phở 1 kg \n
Giá sống 300 gr \n
Gia vị 1 ít (tiêu/ hạt nêm/ muối/ đường/ bột ngọt)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"


                        android:text="Thực Hiện:"
                        android:textColor="#094067"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginBottom="10dp"
                        android:text="Bước 1: Sơ chế nguyên liệu hầm nước dùng.\nBước 2: Cho xương ống bò ninh trong nồi  Đun cho đến khi nước dùng chuyển qua màu vàng đục \nBước 3: Thịt bò phi lê thái thành những lát mỏng, nên thái theo thớ để thịt bò không bị dai khi chế biến."
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                    android:textStyle="normal" />
                    <Button
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#ef4c29"
                        android:textStyle="bold"
                        android:onClick="clickToContacthai"
                        android:textColor="@color/white"

                        android:text="Liên Hệ"
                        android:textSize="15dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>