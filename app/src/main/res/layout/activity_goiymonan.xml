<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".CongThucNauAnActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_rounded_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/white"
                    android:onClick="clickAbcde"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:text="Gợi Ý Món Ăn"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>







        <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="165dp">

                        <LinearLayout
                            android:id="@+id/lnAAA"
                            android:layout_width="170dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:scaleType="fitXY"

                                android:src="@drawable/bun_rieu" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/lnAAA"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="Bún Riêu"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="95dp"
                                android:text=" Cua đồng 300 g \n
Bún tươi 1 kg \n
Tôm khô ̀đ g\n
Trứng ga 2 quả \n
Hành lá, hành khô, tỏi"

                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="173dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <Button
                                    android:layout_width="85dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#F7F7F7"
                                    android:onClick="chitietnauan"
                                    android:text="Chi Tiết"
                                    android:textColor="#ef4c29"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <Button
                                    android:layout_width="85dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#ef4c29"
                                    android:onClick="clickToContact"
                                    android:text="Liên Hệ"
                                    android:textColor="#F7F7F7"
                                    android:textSize="11sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnBBB"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/pho" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnBBB"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Phở"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:text=" Bò phi lê 1.2 kg \n
Bắp bò 0.7 kg\n
Bánh phở 1 kg \n
Giá sống 300 g \n
Hành lá, hành khô, tỏi\n"

                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauanhai"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnCCC"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/comtam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnCCC"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Cơm Tấm"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:text=" Gao tấm 150 g \n
Sốt cà chua \n
Cánh gà 0.7 kg\n
Mật ông 45 g \n
Gia vị 1 ít \n"

                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauanba"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnberry"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/canhchuacaloc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnberry"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Canh Chua Cá Lóc"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:text=" Cá loc 500 g \n
Thơm 100 g\n
Cà chua 100g\n
Me 50 g \n
Bạc hà 100 g \n
Gia vị 1 ít \n"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauanbon"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



</ScrollView>