<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".CongThucNauAnActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_rounded_corner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/white"
                    android:onClick="clickAbcde"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:text="Gợi Ý Món Ăn"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>







        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnAAA"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/bun_rieu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnAAA"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:text="Bún Riêu"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text=" Bún tươi 300g \n
Cua đồng xay 1 kg \n
Giò sống 100g \n
Hành tím 100 g \n
Hành lá 20 g"

                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauan"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnBBB"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/pho" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnBBB"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Phở"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:text=" Xương ống bò 2kg  \n
Bò bắp 0.7 kg \n
Ớt 3 quả \n
Bánh phở 300g \n
Hành tím 100 g"

                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauan"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnCCC"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/comtam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnCCC"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Cơm Tấm"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:text=" Sườn miếng 300 g \n
Củ cải trắng 150g \n
Cà chua: 1 quả \n
Bì heo 100g \n
Hành tím 100g"

                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauan"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/lnberry"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/canhchuacaloc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/lnberry"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Canh Chua Cá Lóc"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="89dp"
                        android:text=" Cá lóc 500 g \n
Giá đỗ 150g \n
Đậu bắp 5 quả \n
Me 2-3 quả \n
Thơm 1 quả"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#F7F7F7"
                            android:onClick="chitietnauan"
                            android:text="Chi Tiết"
                            android:textColor="#ef4c29"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="#ef4c29"
                            android:onClick="clickToContact"
                            android:text="Liên Hệ"
                            android:textColor="#F7F7F7"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



</ScrollView>